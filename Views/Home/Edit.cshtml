@model HaileyHullingerAssignment9.Models.Movie
<div>
    <p>Edit a Movie</p>


    <form asp-action="Save" method="post">
        <!--input for category-->
        <div>
            <label>Category: </label>
            <input asp-for="Category" />
        </div>
        <br />

        <!--input for Title-->
        <div>
            <label>Title: </label>
            <input asp-for="Title" />
        </div>
        <br />

        <!--input for Director-->
        <div>
            <label>Director: </label>
            <input asp-for="Director" />
        </div>
        <br />

        <!--input for Rating, should be drop down menu-->
        <div>
            <label>Rating: </label>
            <select asp-for="Rating">
                <option value="">Select one</option>
                <option value="G">G</option>
                <option value="PG">PG</option>
                <option value="PG-13">PG-13</option>
                <option value="R">R</option>
            </select>
        </div>
        <br />

        <!--input for edited, should be boolean-->
        <div>
            <label>Edited Version?  </label>
            <select asp-for="Edited">
                <option value="">Select one</option>
                <option value="true">Yes</option>
                <option value="false">No</option>
            </select>
        </div>
        <br />

        <!--input for Year-->
        <div>
            <label>Year: </label>
            <input asp-for="Year" />
        </div>
        <br />

        <!--input for Lent To-->
        <div>
            <label>Lent To: </label>
            <input asp-for="LentTo" />
        </div>
        <br />

        <!--input for Notes-->
        <div>
            <label>Notes: </label>
            <input asp-for="Notes" />
        </div>
        <br />
        <!--once save button is hit, pass in movie id-->
                <input type="hidden" name="MovieID" asp-for="MovieID"/>
                <button type="submit">
                    Save
                </button>
    </form>
    <div asp-validation-summary="All"></div>
</div>